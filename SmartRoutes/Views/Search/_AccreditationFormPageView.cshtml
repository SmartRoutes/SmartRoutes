
@using SmartRoutes.Models

@model List<AccreditationModel>

<div class="sr-form-page" id="sr-accreditation-form-page-view">
    <div class="row">
        <div class="col-lg-12">
            @foreach (AccreditationModel accreditation in Model)
            {
                // Create an element for each accreditation.
                <div class="sr-accreditation-container">
                    <input type="checkbox" />
                    <span class="sr-checkbox-text">@accreditation.Name</span>
                    <br />
                    <div class="sr-accreditation-description-container">
                        <p class="sr-accreditation-description-text">@accreditation.Description</p>
                        <br />
                        <a class="sr-accreditation-link" href="@accreditation.URL" target="_blank">@accreditation.URL</a>
                    </div>
                </div>
                
                // Add a line break if this isn't the last accreditation.
                if (@Model.IndexOf(@accreditation) != @Model.Count - 1)
                {
                    <br />
                }
            }
        </div>
    </div>
</div>